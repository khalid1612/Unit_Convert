<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitconverter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LengthActivity" android:label="Length Converter"></activity>
        <activity android:name=".AboutActivity" />
        <activity
            android:name=".TemperatureActivity"
            android:label="Temperature Convert" />
        <activity
            android:name=".ProgrammerActivity"
            android:label="Number system" />
        <activity
            android:name=".PowerActivity"
            android:label="Power Convert" />
        <activity
            android:name=".AngleActivity"
            android:label="Angle Convert" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>